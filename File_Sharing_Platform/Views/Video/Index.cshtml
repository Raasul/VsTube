
<h2>Videos</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Url</th>
            <th>Upload Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var video in Model)
        {
            <tr>
                <td>@video.Title</td>
                <td>@video.Description</td>
                <td>@video.Url</td>
                <td>@video.UploadDate</td>
                <td>
                    <a asp-action="Details" asp-route-id="@video.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@video.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@video.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New Video</a>