
<h2>Comment Details</h2>

<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @Model.Content
        </dd>
        <dt class="col-sm-2">
            Posted Date
        </dt>
        <dd class="col-sm-10">
            @Model.PostedDate
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <form asp-action="Delete" method="post" style="display:inline">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit">Delete</button>
    </form>
</div>
